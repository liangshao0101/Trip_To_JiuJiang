<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#F8F8F8"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:background="@color/colorTitleWidget"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/changepassword_backArrow"
                android:src="@drawable/back_arrow_image"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        <TextView
                android:text="修改密码"
                android:textSize="22sp"
                android:textColor="#4e4e4e"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <TableLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="16dp"
                 android:layout_gravity="center_horizontal"
                 >
        <TableRow
                android:background="#ffffff"
                android:layout_marginTop="16dp"
        >
            <TextView android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textSize="30dp"
                      android:text="用户ID : "/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:minWidth="200dp"
                      android:hint="填写用户ID"
                      android:id="@+id/et_userID"
                      android:textSize="20dp"/>
        </TableRow>

        <TableRow
                android:background="#ffffff"
                android:layout_marginTop="16dp"
        >
            <TextView android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textSize="30dp"
                      android:text="原密码 : "/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:minWidth="200dp"
                      android:inputType="textPassword"
                      android:hint="填写原密码"
                      android:id="@+id/et_lao_password"
                      android:textSize="20dp"/>
        </TableRow>

        <TableRow
                android:background="#ffffff"
                android:layout_marginTop="16dp"
        >
            <TextView android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textSize="30dp"
                      android:text="新密码 : "/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:minWidth="200dp"
                      android:hint="填写新密码"
                      android:inputType="textPassword"
                      android:id="@+id/et_new_password"
                      android:textSize="20dp"/>
        </TableRow>

        <TableRow
                android:background="#ffffff"
                android:layout_marginTop="16dp"
        >
            <TextView android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textSize="30dp"
                      android:text="确认密码 : "/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:minWidth="200dp"
                      android:hint="再次确认密码"
                      android:inputType="textPassword"
                      android:id="@+id/et_verfiy_password"
                      android:textSize="20dp"/>
        </TableRow>
    </TableLayout>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_wancheng"
            android:text="完成"
            android:textSize="30dp"
            android:textColor="#4e4e4e"
            android:background="#ffffff"
            android:layout_marginTop="30dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="16dp"
              android:text="注意：密码必须为8-16位的数字，字符组合(不能是纯数字)"
              android:textColor="#000000"
              android:layout_marginTop="30dp"/>

</LinearLayout>