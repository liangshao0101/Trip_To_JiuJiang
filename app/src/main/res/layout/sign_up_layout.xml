<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:background="@color/colorTitleWidget"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/signUp_backArrow"
                android:src="@drawable/back_arrow_image"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        <TextView
                android:text="注册"
                android:textSize="22sp"
                android:textColor="#4e4e4e"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <EditText
                android:id="@+id/signUp_account"
                android:hint="账号"
                android:textColorHint="@color/colorEditViewHint"
                android:textSize="15sp"
                android:background="@color/colorEditView"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="45dp" />

        <EditText
                android:id="@+id/signUp_password"
                android:hint="密码"
                android:textColorHint="@color/colorEditViewHint"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:background="@color/colorEditView"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="45dp" />

        <EditText
                android:id="@+id/signUp_nickname"
                android:hint="昵称"
                android:textColorHint="@color/colorEditViewHint"
                android:textSize="15sp"
                android:inputType="text"
                android:background="@color/colorEditView"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="45dp" />

        <Button
                android:id="@+id/button_signUp"
                android:text="注  册"
                android:textSize="20sp"
                android:textColor="#238DE1"
                android:layout_marginTop="20dp"
                android:layout_width="295dp"
                android:layout_height="45dp" />

        <LinearLayout
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

            <TextView
                    android:text="已有账号？"
                    android:textSize="20sp"
                    android:textColor="#514d4a"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:text="登录"
                    android:id="@+id/text_signIn"
                    android:textSize="21sp"
                    android:textColor="#538bc7"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="250dp"
                android:layout_height="20dp">
            <View
                    android:layout_height="2px"
                    android:background="#348186"
                    android:layout_width="match_parent" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
