<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:clickable="true">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qq"
        />
        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageIcon"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:text="放    空"/>
        <TextView
                android:id="@+id/accountID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageIcon"
                android:layout_below="@id/name"
                android:layout_alignLeft="@id/name"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="49285003888"
        />
        <Button
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="12dp"
                android:text="设置"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/myxunyangquan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_info_top_margin"
            android:layout_marginLeft="@dimen/activity_info_left_margin"
            android:clickable="true"
            android:textSize="24dp"
            android:text="我的浔阳圈"/>
    <TextView
            android:id="@+id/xunyangquan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_info_top_margin"
            android:layout_marginLeft="@dimen/activity_info_left_margin"
            android:textSize="24dp"
            android:clickable="true"
            android:text="浔阳圈"
    />
    <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="@dimen/activity_info_top_margin"
            android:layout_marginLeft="@dimen/activity_info_left_margin"
            android:textSize="24dp"
            android:text="我的订单"
    />
    <TextView
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="@dimen/activity_info_top_margin"
            android:layout_marginLeft="@dimen/activity_info_left_margin"
            android:textSize="24dp"
            android:text="更改密码"
    />
    <TextView
            android:id="@+id/exitAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="@dimen/activity_info_top_margin"
            android:layout_marginLeft="@dimen/activity_info_left_margin"
            android:textSize="24dp"
            android:text="退出"
    />
    <ScrollView android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
</LinearLayout>
