<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
             android:background="#EDEAEA"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--author:Liam-->
    <LinearLayout
            android:background="@color/colorTitleWidget"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/myorder_backArrow"
                android:src="@drawable/back_arrow_image"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        <TextView
                android:text="我的订单"
                android:textSize="22sp"
                android:textColor="#4e4e4e"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </LinearLayout>

<LinearLayout android:layout_height="wrap_content"
          android:layout_width="match_parent"
              android:orientation="horizontal"
          android:background="#ffffff"
              android:id="@+id/linearlayout_tickets"
          >
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/tickets_order"
               android:id="@+id/image_tickets_order"/>
    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="门票订单"
              android:textSize="25dp"
              android:layout_gravity="center"
              android:layout_marginLeft="30dp"
              android:clickable="true"
              android:textColor="#040303"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/enter_arrow"
               android:layout_gravity="center"
               android:layout_marginLeft="360dp"/>

</LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:layout_marginTop="40dp"
              android:background="#ffffff"
                  android:orientation="horizontal"
                  android:id="@+id/linearlayout_hotel"
    >
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/hotle_order"
                   android:id="@+id/image_hotle_order"/>
        <TextView android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="酒店订单"
                  android:textSize="25dp"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:clickable="true"
                  android:textColor="#040303"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/enter_arrow"
                   android:layout_gravity="center"
                   android:layout_marginLeft="360dp"/>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:layout_marginTop="40dp"
                  android:background="#ffffff"
                  android:orientation="horizontal"
                  android:id="@+id/linearlayout_specialty"
    >
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/specilty_order"
                   android:id="@+id/image_specilty_order"/>
        <TextView android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="特产订单"
                  android:textSize="25dp"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:clickable="true"
                  android:textColor="#040303"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/enter_arrow"
                   android:layout_gravity="center"
                   android:layout_marginLeft="360dp"/>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:layout_marginTop="40dp"
                  android:background="#ffffff"
                  android:orientation="horizontal"
                  android:id="@+id/linearlayout_parking"
    >
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/parking_order"
                   android:id="@+id/image_parking_order"/>
        <TextView android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="停车订单"
                  android:textSize="25dp"
                  android:layout_gravity="center"
                  android:layout_marginLeft="30dp"
                  android:clickable="true"
                  android:textColor="#040303"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/enter_arrow"
                   android:layout_gravity="center"
                   android:layout_marginLeft="360dp"/>
    </LinearLayout>

</LinearLayout>